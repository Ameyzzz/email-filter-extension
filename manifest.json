{
    "manifest_version": 3,
    "name": "Email Fraud & Spam Filter",
    "version": "1.0",
    "description": "Segregates fraud and unnecessary emails into a separate folder.",
    "permissions": [
      "identity",
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://mail.google.com/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  